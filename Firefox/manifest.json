{
  "manifest_version": 2,
  "name": "Zendesk View Auto-Refresh",
  "version": "1.0.0",
  "description": "Automatically refreshes Zendesk views with start/stop control",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "scripting",
    "https://*.zendesk.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-off-16.png",
      "48": "icon-off-48.png",
      "128": "icon-off-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "zendeskrefresh@example.com"
    }
  }
}
